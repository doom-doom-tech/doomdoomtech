{
    "cli": {
        "version": ">= 8.0.0"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "channel": "development"
        },
        "preview": {
            "distribution": "internal",
            "channel": "preview"
        },
        "dev": {
            "distribution": "internal",
            "developmentClient": true,
            "ios": {
                "resourceClass": "m-medium",
                "simulator": false
            },
            "android": {
                "buildType": "apk"
            },
            "channel": "production"
        },
        "production": {
            "distribution": "store",
            "developmentClient": false,
            "ios": {
                "resourceClass": "m-medium",
                "simulator": false,
                "image": "latest"
            },
            "android": {
                "buildType": "app-bundle"
            },
            "channel": "production"
        },
        "development-apk": {
            "developmentClient": true,
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "channel": "development-apk"
        }
    },
    "submit": {
        "production": {}
    }
}
