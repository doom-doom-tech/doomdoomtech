{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "moduleResolution": "nodenext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "skipLibCheck": true,
        "target": "es2017",
        "rootDir": "."
    },
    "compileOnSave": true,
    "include": [
        "index.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
